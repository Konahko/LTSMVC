@model LTSMVC.Models.RemoveControl

@{
    ViewData["Title"] = "Create";
}

<script>
    function onMachineChange(id) {

        var url = '@Url.Action("InfoUpdate", "RemoveControls")';
        $.get(url, { id: id }, function (data) {
            console.log(data);
            console.log($("#MachineType"))
            $("#MachineType").html(data.type);
            $("#MachineName").html(data.name);
            $("#MachineInvNumber").html(data.invNumber);
            $("MachineStatus").html(data.Status);
            $("MachinePlace").html(data.Place);
        });
    }

</script>

<h1>Создание записи</h1>

<h4>Пользователи</h4>
<hr />
<div class="d-flex bd-highlight">
    <div class="p-2 flex-fill bd-highligh">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MachinesId" class="control-label"></label>
                        <select asp-for="MachinesId" class="form-control" asp-items="ViewBag.MachinesId"
                                onchange="onMachineChange(this.options[this.selectedIndex].value)"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="AnyDesk" class="control-label"></label>
                        <input asp-for="AnyDesk" class="form-control" />
                        <span asp-validation-for="AnyDesk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AnyDeskPassword" class="control-label"></label>
                        <input asp-for="AnyDeskPassword" class="form-control" />
                        <span asp-validation-for="AnyDeskPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamViewer" class="control-label"></label>
                        <input asp-for="TeamViewer" class="form-control" />
                        <span asp-validation-for="TeamViewer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamViewerPassword" class="control-label"></label>
                        <input asp-for="TeamViewerPassword" class="form-control" />
                        <span asp-validation-for="TeamViewerPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AmmyAdmin" class="control-label"></label>
                        <input asp-for="AmmyAdmin" class="form-control" />
                        <span asp-validation-for="AmmyAdmin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AmmyAdminPassword" class="control-label"></label>
                        <input asp-for="AmmyAdminPassword" class="form-control" />
                        <span asp-validation-for="AmmyAdminPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rdp" class="control-label"></label>
                        <input asp-for="Rdp" class="form-control" />
                        <span asp-validation-for="Rdp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="p-2 flex-fill bd-highligh">
        <h4>Информация о машине</h4>
        <dt class="col-sm-2">
            <label>Тип</label>
        </dt>
        <dd class="col-sm-10" id="MachineType">
            @Model.Machines.Type
        </dd>
        <dt class="col-sm-2">
            <label>Наименование</label>
        </dt>
        <dd class="col-sm-10" id="MachineName">
            @Model.Machines.Name
        </dd>
        <dt class="col-sm-2">
            <label>Инвентарный номер</label>
        </dt>
        <dd class="col-sm-10" id="MachineInvNumber">
            @Model.Machines.InvNumber
        </dd>
        <dt class="col-sm-2">
            <label>Статус</label>
        </dt>
        <dd class="col-sm-10" id="MachineStatus">
            @Model.Machines.Status
        </dd>
        <dd class="col-sm-2">
            <label>Местоположение</label>
        </dd>
        <dd class="col-sm-10" id="MachinePlace">
            @Model.Machines.Place
        </dd>
    </div>

</div>
<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
