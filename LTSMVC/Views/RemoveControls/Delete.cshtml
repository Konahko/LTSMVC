@model LTSMVC.Models.RemoveControl

@{
    ViewData["Title"] = "Удаление записи";
}

<h1>Удаление запси</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div class="d-flex bd-highlight">
    <div class="p-2 flex-fill bd-highligh">
        <h4>Удаленное подключение</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AnyDesk)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnyDesk)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AnyDeskPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnyDeskPassword)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamViewer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamViewer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamViewerPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamViewerPassword)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AmmyAdmin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AmmyAdmin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AmmyAdminPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AmmyAdminPassword)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rdp)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rdp)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Machines)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Machines.InvNumber)
            </dd>
        </dl>
    </div>

    <div class="p-2 flex-fill bd-highligh">
        <h4>Информация о машине</h4>
        <dt class="col-sm-2">
            <label>Тип</label>
        </dt>
        <dd class="col-sm-10" id="MachineType">
            @Model.Machines.Type
        </dd>
        <dt class="col-sm-2">
            <label>Наименование</label>
        </dt>
        <dd class="col-sm-10" id="MachineName">
            @Model.Machines.Name
        </dd>
        <dt class="col-sm-2">
            <label>Инвентарный номер</label>
        </dt>
        <dd class="col-sm-10" id="MachineInvNumber">
            @Model.Machines.InvNumber
        </dd>
        <dt class="col-sm-2">
            <label>Статус</label>
        </dt>
        <dd class="col-sm-10" id="Machine.Status">
            @Model.Machines.Status
        </dd>
        <dd class="col-sm-2">
            <label>Местоположение</label>
        </dd>
        <dd class="col-sm-10" id="MachinePlace">
            @Model.Machines.Place
        </dd>
    </div>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
