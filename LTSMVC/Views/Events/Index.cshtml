@model LTSMVC.Classes.Events.EventsPage
@{
    ViewData["Title"] = "Уведомление";
}

<h1>События</h1>
<hr />
@if (Model.NewEvents.Count > 0)
{
    <h3>Предстощие события</h3>
    <hr />
    <div class="mt-2">
        <div class="border border-secondary">
            @foreach (var item in Model.NewEvents)
            {
                <div>
                    <div class="d-flex bg-secondary border-bottom border-secondary">
                        <div class="p-2">
                            <dt>Подразделение отправитель:</dt>
                            <label>@item.Staff.StaffPoss</label>
                        </div>
                        <div class="p-2">
                            <dt>Ответственный за отправку:</dt>
                            <label>@item.Staff.StaffName</label>
                        </div>
                    </div>
                    <div class="p-2">
                        <strong>Время</strong>
                        <label>@item.DateTimeOfEvent</label>
                    </div>
                </div>
                <div class="p-2">
                    <strong>@item.Theme</strong>
                    <p>@item.Event</p>
                </div>
            }
        </div>
    </div>
}

@if (Model.OldEvents.Count > 0)
{
    <h3>События прошедших 30 дней</h3>
    <hr />
    <div class="mt-2">
        <div class="border border-secondary">
            @foreach (var item in Model.OldEvents)
            {
                <div>
                    <div class="d-flex bg-secondary border-bottom border-secondary">
                        <div class="p-2">
                            <dt>Подразделение отправитель:</dt>
                            <label>@item.Staff.StaffPoss</label>
                        </div>
                        <div class="p-2">
                            <dt>Ответственный за отправку:</dt>
                            <label>@item.Staff.StaffName</label>
                        </div>
                    </div>
                    <div class="p-2">
                        <strong>Время</strong>
                        <label>@item.DateTimeOfEvent</label>
                    </div>
                </div>
                <div class="p-2">
                    <strong>@item.Theme</strong>
                    <p>@item.Event</p>
                </div>
            }
        </div>
    </div>
}
