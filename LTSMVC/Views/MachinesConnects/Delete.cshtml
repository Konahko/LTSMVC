@model LTSMVC.Models.MachinesConnect

@{
    ViewData["Title"] = "Удаление Записи";
}

<h1>Удаление записи</h1>

<h3>Вы уверены что хотите удалить запись??</h3>
<h4>MachinesConnect</h4>
<hr />
<div class="d-flex bd-highlight">
    <div class="p-2 flex-fill bd-highligh">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Login)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Login)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pass)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAdmin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsAdmin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Machines)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Machines.InvNumber)
            </dd>
        </dl>
    </div>

    <div class="p-2 flex-fill bd-highligh">
        <h4>Информация о машине</h4>
        <dt class="col-sm-2">
            <label>Тип</label>
        </dt>
        <dd class="col-sm-10" id="MachineType">
            @Model.Machines.Type
        </dd>
        <dt class="col-sm-2">
            <label>Наименование</label>
        </dt>
        <dd class="col-sm-10" id="MachineName">
            @Model.Machines.Name
        </dd>
        <dt class="col-sm-2">
            <label>Инвентарный номер</label>
        </dt>
        <dd class="col-sm-10" id="MachineInvNumber">
            @Model.Machines.InvNumber
        </dd>
        <dt class="col-sm-2">
            <label>Статус</label>
        </dt>
        <dd class="col-sm-10" id="Machine.Status">
            @Model.Machines.Status
        </dd>
        <dd class="col-sm-2">
            <label>Местоположение</label>
        </dd>
        <dd class="col-sm-10" id="MachinePlace">
            @Model.Machines.Place
        </dd>
    </div>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
